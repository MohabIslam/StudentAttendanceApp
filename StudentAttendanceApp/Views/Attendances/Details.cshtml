@model StudentAttendanceApp.Models.Attendance

@{
    ViewData["Title"] = "Attendance Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <h3 class="mb-0"><i class="bi bi-calendar-check"></i> Attendance Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Student</dt>
                <dd class="col-sm-9">@Model.Student.Name</dd>

                <dt class="col-sm-3 fw-bold">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Status == "Present")
                    {
                        <span class="badge bg-success">Present</span>
                    }
                    else if (Model.Status == "Absent")
                    {
                        <span class="badge bg-danger">Absent</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.Status</span>
                    }
                </dd>
            </dl>
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
