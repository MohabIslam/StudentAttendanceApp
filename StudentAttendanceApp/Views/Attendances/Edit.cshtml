@model StudentAttendanceApp.Models.Attendance

@* @{
//   ViewData["Title"] = "Edit Attendance Record";
} *@

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Attendance Record</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <!-- Keep the StudentId hidden but display the Student name -->
                <input type="hidden" asp-for="StudentId" />

                <div class="mb-3">
                    <label class="form-label fw-bold text-danger">Student</label>
                    <input type="text" class="form-control" value="@Model.Student.Name" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-bold text-danger">Date & Time</label>
                    <input asp-for="Date" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold text-danger">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Present" selected="@(Model.Status == "Present")">Present</option>
                        <option value="Absent" selected="@(Model.Status == "Absent")">Absent</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
