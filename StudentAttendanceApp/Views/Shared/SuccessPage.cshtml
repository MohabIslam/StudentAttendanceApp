@{
    ViewData["Title"] = "Success";
    var successMessage = TempData["Success"] as string ?? "Action completed successfully!";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg border-success">
        <div class="card-header bg-success text-white">
            <h2><i class="bi bi-check-circle-fill"></i> Success!</h2>
        </div>
        <div class="card-body">
            <p class="lead text-success fw-bold">
                @successMessage
            </p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-success mt-3">
                <i class="bi bi-house-door-fill"></i> Back to Home
            </a>
        </div>
    </div>
</div>
