@model IEnumerable<StudentAttendanceApp.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-danger">📚 Students</h2>
        <a class="btn btn-danger btn-lg shadow" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title text-secondary">📥 Import Students from Excel</h5>
            <form asp-action="ImportExcel" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="col-md-8">
                    <input type="file" name="file" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-upload"></i> Import Excel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-secondary">👥 Student List</h5>
            <table id="studentsTable" class="table table-hover table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Class)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Class</td>
                            <td class="text-center">
                                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [5, 10, 20, 50],
                "searching": true,
                "ordering": true,
                "info": true,
                "language": {
                    "search": "🔍 Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ students",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "→",
                        "previous": "←"
                    }
                }
            });
        });
    </script>
}
