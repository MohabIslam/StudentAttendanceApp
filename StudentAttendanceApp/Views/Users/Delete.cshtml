@model StudentAttendanceApp.ViewModels.UserDeleteViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>🗑 Delete User</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">⚠ Are you sure you want to delete this user?</p>
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.User.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.User.Email</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>

                <dt class="col-sm-3">Branch</dt>
                <dd class="col-sm-9">@Model.User.Branch.Name</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="User.Id" />
                <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
            </form>
        </div>
    </div>
</div>
