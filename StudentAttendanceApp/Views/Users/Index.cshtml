@model IEnumerable<StudentAttendanceApp.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">👥 Users</h2>
        <a class="btn btn-success btn-lg" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add User
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Branch</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Role?.Name</td>
                            <td>@user.Branch?.Name</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id">✏️ Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id">🗑 Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
