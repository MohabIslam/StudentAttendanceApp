@model StudentAttendanceApp.ViewModels.UserFormViewModel

@{
    var title = Model.IsEditMode ? "✏ Edit User" : "➕ Add User";
    ViewData["Title"] = title;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3>@title</h3>
        </div>
        <div class="card-body">
            <form asp-action="@((Model.IsEditMode ? "Edit" : "Create"))" method="post">
                <input type="hidden" asp-for="User.Id" />

                <div class="mb-3">
                    <label asp-for="User.FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="User.FullName" class="form-control" />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Email" class="form-label fw-bold">Email</label>
                    <input asp-for="User.Email" type="email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.PasswordHash" class="form-label fw-bold">Password</label>
                    <input asp-for="User.PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Role</label>
                    <select asp-for="SelectedRole" asp-items="Model.Roles" class="form-select">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="User.BranchId" class="form-label fw-bold">Branch</label>
                    <select asp-for="User.BranchId" asp-items="@(new SelectList(Model.Branches, "Id", "Name"))" class="form-select">
                        <option value="">-- Select Branch --</option>
                    </select>
                    <span asp-validation-for="User.BranchId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">💾 Save</button>
                <a asp-action="Index" class="btn btn-secondary">⬅ Back</a>
            </form>
        </div>
    </div>
</div>
