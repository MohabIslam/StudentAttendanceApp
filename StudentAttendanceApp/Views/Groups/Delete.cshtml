@model StudentAttendanceApp.Models.StudentGroup
@{
    ViewData["Title"] = "Delete Group";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>🗑 Delete Group</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">⚠ Are you sure you want to delete this group?</p>
            <dl class="row">
                <dt class="col-sm-3">Group Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Track</dt>
                <dd class="col-sm-9">@Model.Track.Name</dd>

                <dt class="col-sm-3">Branch</dt>
                <dd class="col-sm-9">@Model.Track.Branch.Name</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
            </form>
        </div>
    </div>
</div>
