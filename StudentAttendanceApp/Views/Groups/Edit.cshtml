@model StudentAttendanceApp.Models.StudentGroup
@{
    ViewData["Title"] = "Edit Group";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3>✏ Edit Group</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Group Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter group name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrackId" class="form-label fw-bold">Select Track</label>
                    <select asp-for="TrackId" asp-items="ViewBag.Tracks" class="form-select"></select>
                    <span asp-validation-for="TrackId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning">💾 Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">⬅ Back</a>
            </form>
        </div>
    </div>
</div>
