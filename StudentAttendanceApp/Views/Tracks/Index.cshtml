@{
    ViewData["Title"] = "Tracks";
    var tracks = ViewBag.Tracks;
}

<div class="container mt-4">
    <h2 class="text-danger">📚 Tracks</h2>
    <a class="btn btn-success mb-3" asp-action="Create">➕ Add New Track</a>

    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Branch</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var track in tracks)
            {
                <tr>
                    <td>@track.Id</td>
                    <td>@track.Name</td>
                    <td>@track.BranchName</td>
                    <td>@track.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@track.Id">✏ Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@track.Id">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
