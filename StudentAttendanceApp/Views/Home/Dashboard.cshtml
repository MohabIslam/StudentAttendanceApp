@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4 fw-bold">📊 ITI Attendance Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow border-0 text-white bg-primary">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">👨‍🎓 Students</h5>
                    <h2 class="display-5">@ViewData["Students"]</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow border-0 text-white bg-success">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">👥 Users</h5>
                    <h2 class="display-5">@ViewData["Users"]</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow border-0 text-white bg-danger">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">🏢 Branches</h5>
                    <h2 class="display-5">@ViewData["Branches"]</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow border-0 text-white bg-warning">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">👨‍🏫 Groups</h5>
                    <h2 class="display-5">@ViewData["Groups"]</h2>
                </div>
            </div>
        </div>
    </div>
</div>
