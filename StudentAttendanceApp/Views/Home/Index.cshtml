@{
    ViewData["Title"] = "Welcome to ITI Attendance System";
}

<div class="container mt-4">

    <!-- Hero Banner -->
    <div class="p-5 mb-4 bg-danger text-white rounded-3 shadow">
        <div class="container py-5">
            <h1 class="display-4 fw-bold">📖 ITI Attendance System</h1>
            <p class="lead">
                A simple and powerful tool to manage student attendance with ease.
                Made with ❤️ and sponsored by <span class="fw-bold text-warning">The MERN Stack Group</span>.
            </p>
            <a href="https://en.wikipedia.org/wiki/MERN" target="_blank" class="btn btn-light btn-lg fw-bold mt-3">
                Learn about MERN Stack 🚀
            </a>
        </div>
    </div>

    <!-- MERN Stack Info -->
    <div class="row text-center mt-5">
        <h2 class="fw-bold text-danger mb-4">💻 What is MERN Stack?</h2>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow border-0">
                <img src="~/images/MongoDB.png" class="card-img-top p-3" alt="MongoDB Logo">
                <div class="card-body">
                    <br /><br /><br /><br /><br /><br />
                    <h5 class="card-title fw-bold">MongoDB</h5> 
                    <p class="card-text">A flexible NoSQL database for modern applications.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow border-0">
                <img src="~/images/Express.png" class="card-img-top p-3" alt="ExpressJS Logo">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Express.js</h5>
                    <p class="card-text">A fast, minimalist framework for building APIs and web apps.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow border-0">
                <img src="~/images/React.png" class="card-img-top p-3" alt="React Logo">
                <div class="card-body">
                    <h5 class="card-title fw-bold">React</h5>
                    <p class="card-text">A powerful library for building dynamic user interfaces.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow border-0">
                <img src="~/images/NodeJs.png" class="card-img-top p-3" alt="NodeJS Logo">
                <div class="card-body">
                    <br /><br /><br /><br /><br />
                    <h5 class="card-title fw-bold">Node.js</h5>
                    <p class="card-text">A JavaScript runtime for running server-side code.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
        <h3 class="fw-bold">🌟 This project is proudly sponsored by <span class="text-danger">The MERN Stack Group</span></h3>
        <p class="lead">Combining .NET power with MERN creativity for modern solutions.</p>
        <img src="~/images/iti-cairo-logo.png" alt="ITI Logo" class="img-fluid rounded shadow mt-3" style="max-height: 100px;" />
    </div>
</div>
