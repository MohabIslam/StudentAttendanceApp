@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">
    <h2 class="text-danger">🔑 Roles</h2>
    <a class="btn btn-success mb-3" asp-action="Create">➕ Add New Role</a>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@role.Id">✏ Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@role.Id">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
