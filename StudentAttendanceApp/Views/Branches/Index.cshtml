@model IEnumerable<StudentAttendanceApp.Models.Branch>
@{
    ViewData["Title"] = "Branches";
}

<div class="container mt-4">
    <h2 class="text-danger">🏢 Branches</h2>
    <a class="btn btn-success mb-3" asp-action="Create">➕ Add New Branch</a>

    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model)
            {
                <tr>
                    <td>@branch.Id</td>
                    <td>@branch.Name</td>
                    <td>@branch.Address</td>
                    <td>@branch.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@branch.Id">✏ Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@branch.Id">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
